FROM ${AIRFLOW_IMAGE_NAME:-apache/airflow:3.1.5}

# Install ffmpeg (and required system deps). Keep image small by cleaning apt caches.
USER root
RUN apt-get update \
    && apt-get install -y --no-install-recommends ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Switch back to default user (the official image sets this later in entrypoint, but keep root->user switching safe)
USER ${AIRFLOW_UID:-50000}:0
